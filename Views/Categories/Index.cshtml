@model IEnumerable<BlogApp.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <h1>Lista kategorii</h1>

        <p>
            <a class="btn btn-primary" asp-action="Create">Utwórz nowy</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.Id">Edycja</a> 
                            <a class="btn btn-outline-secondary" asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> 
                            <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>